MyLayout:


<ImageLabel@Label>:
    image_source: ''
    canvas.before:
        Rectangle:
            source: self.image_source
            pos: self.pos
            size: self.size

<MyLayout>:
    BoxLayout:
        orientation: "horizontal"
        size : root.width , root.height

        spacing : 30 # butonlar arası boşluk
        padding: 30 # kenarlara olan uzaklık
        

        GridLayout:
            cols: 1
            
            GridLayout:
                cols: 1
                size_hint : 1,0.8
                Image:
                    id: img1
                    size_hint : 1,0.8
                    allow_stretch : True
                    keep_ratio : True
                
            
                

      
          
            
            
                
            
                

            
